{
  "version": 2,
  "builds": [
    {
      "src": "Telegram-Clon/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Telegram-Clon/dist"
      }
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/backend/$1" }
  ],
  "scripts": {
    "postinstall": "npm run install-all",
    "install-all": "npm --prefix ./Telegram-Clon install && npm --prefix ./backend install",
    "build": "npm --prefix ./Telegram-Clon run build"
  }
}
